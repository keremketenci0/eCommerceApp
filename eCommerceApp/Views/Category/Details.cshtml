@model Category
@{
}

<div class="container mt-2">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                        <img src="/@product.Image" class="card-img-top" alt="@product.Image">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text price d-flex justify-content-between"></p>
                            <span>$@product.Price</span>
                            <a class="text-decoration-none btn btn-success add-to-cart-btn">Sepete Ekle</a>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>