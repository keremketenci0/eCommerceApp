@model IEnumerable<Seller>
@{
    ViewData["Title"] = "Seller Page";
}


@foreach(var seller in Model)
{
    <div class="container">
        <a class="text-decoration-none text-black" asp-controller="Seller" asp-action="Details" asp-route-id="@seller.Id">
            <div class="row mt-5 mb-5">
                <div class="col-1 bg-primary d-flex justify-content-center align-items-center">
                    <img src="https://cdn.dsmcdn.com/seller-store/uploads/968/8dd1c344-19fc-4308-93c5-dee70cb87316.jpeg" alt="Seller image" style="border-radius: 50%;" class="img-fluid">
                </div>
                <div class="col-2 bg-secondary d-flex justify-content-center align-items-center">
                    @seller.Name
                </div>
                <div class="col bg-info d-flex justify-content-end align-items-center">
                    3 of 3
                </div>
            </div>
        </a>
    </div>

    <div class="container mt-2">
        <div class="row">
            @foreach (var product in seller.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@product.Image" class="card-img-top" alt="@product.Image">

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text price d-flex justify-content-between">
                                    <span>$@product.Price</span>
                                </p>
                                <a class="btn bg-success text-light" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@product.Id">sepete ekle</a>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}